<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="815dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0a0b0d"
    android:orientation="vertical"
    tools:context=".setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#D6DCED"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="175dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:lottie_rawRes="@raw/line"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginStart="75dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:backgroundTint="#00ffffff"
        app:strokeColor="#26d6dced"
        app:strokeWidth="1dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/reg"
            android:lineSpacingExtra="5dp"
            android:text="Thank you for choosing BlogWiser as your preferences for a blogging app. I as a developer really appreciate your likings as well as dis - likings .And, thank you for supporting us...!"
            android:textColor="#A6D6DCED"
            android:textSize="16sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn"
        app:backgroundTint="#fff387"
        android:layout_margin="32dp"
        android:text="Log Out"
        android:textColor="#0a0b0d"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        android:textStyle="bold"/>
</LinearLayout>